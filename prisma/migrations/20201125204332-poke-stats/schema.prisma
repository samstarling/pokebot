datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Pokemon {
  number Int @id
  generation Int
  name String

  hp Int @default(0)
  attack Int @default(0)
  defense Int @default(0)
  speed Int @default(0)

  @@index([generation])
}

model Roll {
  id Int @default(autoincrement()) @id
  createdAt DateTime @default(now())
  teamId String
  userId String
  pokemonNumber Int

  Pokemon Pokemon @relation(fields: [pokemonNumber], references: [number])
}
